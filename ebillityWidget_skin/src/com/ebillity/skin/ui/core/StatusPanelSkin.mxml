<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.ebillity.core.view.ui.core.StatusPanel")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			////////////////code for image/////////
			[Embed(source="/Images/wifiIconOn.png")]
			[Bindable]
			public var wifiIconOn:Class;
			
			[Embed(source="/Images/wifiIconOff.png")]
			[Bindable]
			public var wifiIconOff:Class;
			
			[Embed(source="/Images/concurIcon.png")]
			[Bindable]
			public var concurIcon:Class;
			
			[Embed(source="/Images/GustoIcon.png")]
			[Bindable]
			public var gustoIcon:Class;
			
			[Embed(source="/Images/quickBooksIcon.png")]
			[Bindable]
			public var quickBooksIcon:Class;
			
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="disable"/>
	</s:states>
	<!-- background ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="#f1f1f2"/>
		</s:fill>
	</s:Rect>
	
		<s:Group   width="100%" height="100%" >
		

		<s:layout>
			<s:HorizontalLayout gap="10" paddingLeft="20" verticalAlign="top"/>
		</s:layout>
		
		<s:Image id="wifiImage" source="{wifiIconOn}"/>
		<s:Image id="quickBooksImage" source="{quickBooksIcon}"/>
		<s:Image id="gustoImage" source="{gustoIcon}"/>
		<s:Image id="concurImage" source="{concurIcon}"/>
	
	</s:Group>
</s:Skin>
